pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/skrazzaqgithub/test_repo.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'pip install --upgrade pip'
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Lint') {
            steps {
                sh 'flake8 .'  // This will fail the build if lint errors exist
            }
        }
        stage('Test') {
            steps {
                sh 'pytest tests/'  // Run all tests inside the tests/ directory
            }
        }
    }
    post {
        success {
            echo 'Build succeeded, lint and tests passed!'
        }
        failure {
            echo 'Build failed: Check lint or test errors.'
        }
    }
}
